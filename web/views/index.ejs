<script type="text/javascript">

    var SlidingApps;
    (function (SlidingApps) {
        (function (Warrant) {
            var Navigation = (function () {

                function Navigation() {
                    this.initializeObject();
                }

                Navigation.prototype.initializeObject = function () {
                    this.initializeSearchBox();
                    this.initializeTopBar();
                };

                Navigation.prototype.initializeSearchBox = function () {
                    $('.search').click(function() {
                        if ($('.search-btn').hasClass('fa-search')) {
                            $('.search-open').fadeIn(300);
                            $('.search-btn').removeClass('fa-search');
                            $('.search-btn').addClass('fa-times');

                            var $input = $('input.form-control', '.search-open');
                            $input.focus();
                            $input.select();
                        }
                        else {
                            $('.search-open').fadeOut(300);
                            $('.search-btn').addClass('fa-search');
                            $('.search-btn').removeClass('fa-times');
                        }
                    });
                };

                Navigation.prototype.initializeTopBar = function()
                {
                    $('#signOut').on('click', function () {
                        var $a = $(this).find('a');
                        window.location = $a.attr('href');
                    });
                }

                return Navigation;
            })();

            Warrant.Navigation = Navigation;
        })(SlidingApps.Collaboration || (SlidingApps.Collaboration = {}));

        var Warrant = SlidingApps.Collaboration;
    })(SlidingApps || (SlidingApps = {}));

    $('document').ready(function () {
        var navigation = new SlidingApps.Collaboration.Navigation();
    });

</script>

